$(function () {	
	$('.horizontal_scroller').SetScroller({	
			velocity: 	 60,
			direction: 	 'horizontal',
			startfrom: 	 'left',
			loop:		 'infinite',
			movetype: 	 'linear',
			onmouseover: 'pause',
			onmouseout:  'play',
			onstartup: 	 'play',
			cursor: 	 'default'
	});
});
